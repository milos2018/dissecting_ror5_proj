<div class="card">
  <%= image_tag(portfolio_item.thumb_image, alt:"Card image cap") if !portfolio_item.thumb_image.nil? %>
  <p class="card-text">
    <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
    <span><%= portfolio_item.subtitile %></span>
    <span><%= portfolio_item.body %></span>
    <p><%= link_to "edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %></p>
    <p><%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, data: {confirm: "Are you sure?"} if logged_in?(:site_admin) %></p>
  </p>
</div>


