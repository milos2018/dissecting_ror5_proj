<h1>Portfolio Items</h1>

<a href="portfolios/new">Create new item</a>
<br>

<%= link_to "Create new item", new_portfolio_path %>

<p> <%= new_portfolio_path %></p>
<p> <%= new_portfolio_url %></p>

<% @portfolio_items.each do |portfolio_item| %>
  <h3><%= link_to portfolio_item.title, portfolio_path(portfolio_item) %></h3>
  <p><%= portfolio_item.subtitile %></p>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %></p>
  <p><%= link_to "edit", edit_portfolio_path(portfolio_item) %></p>
  <p><%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, data: {confirm: "Are you sure?"} %></p>
  <hr>
<% end %>